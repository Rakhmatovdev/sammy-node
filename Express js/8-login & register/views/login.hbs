<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
              <h3 class="mb-5">Sign in</h3>
            <form action='/login' method='post'>
              <div class="form-floating mb-4">
                <input
                  name="email"
                  type="email"
                  id="floatingInput"
                  class="form-control"
                  placeholder="name@example.com"
                  required
                />
                <label for="floatingInput">Email</label>
              </div>
              <div class="form-outline mb-4 form-floating">
                <input
                  name="password"
                  type="password"
                  id="typePasswordX-2"
                  class="form-control"
                  placeholder="password..."
                  required
                />
                <label class="form-label" for="typePasswordX-2">Password</label>
              </div>
              <div class="form-check d-flex justify-content-start mb-4">
                <input
                  name="check"
                  class="form-check-input"
                  type="checkbox"
                  id="form1Example7"
                />
                <label class="form-check-label" for="form1Example7">
                  Remember password
                </label>
              </div>
              <button
                class="btn btn-primary btn-lg btn-block w-100"
                type="submit"
              >Login</button>
            </form>
            <hr class="my-4" />
            <button
              class="btn btn-lg btn-block btn-primary"
              style="background-color: #dd4b39;"
              type="submit"
            ><i class="bx bxl-google me-2"></i> Sign in with google</button>
            <button
              class="mt-2 btn btn-lg btn-block btn-primary mb-2"
              style="background-color: #3b5998;"
              type="submit"
            ><i class="bx bxl-facebook me-2"></i>Sign in with facebook</button>

          </div>

        </div>
      </div>
    </div>
  </div>
</section>
