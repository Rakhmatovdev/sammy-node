<hr class='featurette-divider' />

{{#if products}}
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    {{#each products}}
      <div class="col">
        <div class="card shadow-sm">
          <img src={{image}} alt={{title}} />
          <div class="card-body">
            <p class="card-text fw-bold">{{title}}</p>
            <div class="d-flex justify-content-between align-items-center">
              <p class="m-0 p-0">{{formatDate createdAd}}</p>
              <small class="text-body-secondary fs-5">{{price}}.00$</small>
            </div>
          </div>
      
          <div class="card-footer flex justify-content-center">
            <div
              class="btn-group btn-group-sm"
              role="group"
              aria-label="Basic example"
            >
              <a href="/product/{{_id}}"
                type="button"
                class="btn btn-outline-primary"
              >Detail</a>
                  {{#if @root.token}}
                  {{#ifequal user @root.userId}}
            <a href="/edit-product/{{_id}}"
                type="button"
                class="btn btn-outline-secondary"
              >Edit</a>
              <form action="/delete-product/{{_id}}" method="post" class="m-0 btn btn-outline-danger"> 
              <button
                type="submit"
                class="delete-btn "
              >Delete</button></form>
            </div>
            {{/ifequal }}
          {{/if}}
           
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <section class='page_404 w-75 mx-auto'>
		<div class='row'>
			<div class='col-sm-12'>
				<div class='col-sm-10 col-sm-offset-1 text-center'>
					<div class='four_zero_four_bg'>
						<h1 class='text-center'>404</h1>
					</div>
					<div class='contant_box_404'>
						<h3 class='h2'>Add new products</h3>
						<a href='/add' class='btn btn-primary btn-lg mb-5'>Add products</a>
					</div>
				</div>
			</div>
		</div>
	</section>
{{/if}}


